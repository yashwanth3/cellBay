<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postal_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityLiveRegion="none"
    android:focusable="auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/ship_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityLiveRegion="assertive"
                android:backgroundTintMode="add"
                android:capitalize="words"
                android:ellipsize="none"
                android:fontFamily="monospace"
                android:gravity="center"
                android:lineSpacingExtra="12sp"
                android:minHeight="48dp"
                android:text="Shipping Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="34sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="FirstName"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="LastName"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/idMail"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="E-mail"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textAlignment="center"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/delivery_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:accessibilityLiveRegion="assertive"
                android:backgroundTintMode="add"
                android:capitalize="words"
                android:ellipsize="none"
                android:fontFamily="monospace"
                android:lineSpacingExtra="12sp"
                android:minHeight="48dp"
                android:text="Delivery Address"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/idAdd01"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:hint="Street Address1"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/add_2"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:hint="Street Address2"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:hint="City"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:ems="10"
                    android:hint="Country"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/editTextTextPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Postal/Zip Code"
                    android:inputType="textPostalAddress"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <Button
                android:id="@+id/Next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add CC Details" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>